    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView3" android:textSize="20dp" android:textColor="#444444" android:text="Angle"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView4" android:textSize="20dp" android:textColor="#444444" android:text="Distance"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView5" android:textSize="20dp" android:textColor="#444444" android:text="Direction"/>


        <Button android:layout_height="50dp" android:layout_width="wrap_content" android:id="@+id/bluetooth_connect_btn" android:text="Connect to Bluetooth Device" android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"/>
</LinearLayout>

